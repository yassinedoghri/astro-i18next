---
import { t } from "i18next";
import { interpolate } from "../utils";
export interface Props {
  i18nKey: string;
}

const { i18nKey } = Astro.props;

const localizedString = t(i18nKey);
const referenceString = await Astro.slots.render("default");

const interpolatedString = interpolate(localizedString, referenceString);
---

<Fragment set:html={interpolatedString} />
